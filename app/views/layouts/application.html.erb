<!DOCTYPE html>

<header>
  <%= form_with url: "/search", method: :get, local: true do |f| %>
    <%= f.label :keyword, "キーワード検索" %>
    <%= f.text_field :keyword %>
    <%= f.submit "検索" %>
  <% end %>

  <%= form_with url: "/tag_search", method: :get, local: true do |f| %>
    <%= f.label :tag_name, "タグ検索" %>
    <%= f.text_field :tag_name %>
    <%= f.submit "検索" %>
  <% end %>

  <%= link_to "投稿する", new_post_path %>
  
  <% if user_signed_in? %>
    <%= link_to "プロフィール", user_path(current_user) %>
  <% end %>
  
</header>

<html>
  <head>
    <title>OriginalApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
