<h1>Search Results</h1>

<% if @posts.empty? %>
  <p>No posts found.</p>
<% else %>
  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <p>Posted by: <%= link_to post.user.name, user_path(post.user) %></p>
    </div>
  <% end %>
<% end %>