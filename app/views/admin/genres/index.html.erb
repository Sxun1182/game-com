<h1>ジャンル一覧</h1>

<% @genres.each do |genre| %>
  <p><%= genre.name %></p>
  <%= link_to '削除', admin_genres_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' } %>
<% end %>

<h2>新しいジャンルを追加</h2>

<%= form_with model: Genre.new, url: admin_genres_path, local: true do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.submit "ジャンルを追加" %>
<% end %>