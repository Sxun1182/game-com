<div class="chat-room">
  <div class="messages">
    <% @messages.each do |message| %>
      <div class="message <%= message.user == current_user ? 'self' : 'other' %>">
        <div class="user"><%= message.user.name %></div>
        <div class="content"><%= message.content %></div>
        <div class="timestamp"><%= message.created_at.strftime('%Y/%m/%d %H:%M') %></div>
      </div>
    <% end %>
  </div>

  <div class="new-message">
    <%= form_with url: chat_messages_path(@chat_room), local: true do |form| %>
      <%= form.text_field :content, id: "message-content" %>
      <%= form.submit "Send" %>
    <% end %>
  </div>
</div>